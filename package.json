{
  "name": "myweb",
  "version": "1.0.0",
  "description": "MyWeb Project",
  "type": "module",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w server\" \"npm run dev -w client\"",
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "build": "npm run build -w server && npm run build -w client",
    "build:server": "npm run build -w server",
    "build:client": "npm run build -w client",
    "start": "npm start -w server",
    "format": "prettier --write \"**/*.{js,vue,css,md,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,vue,css,md,json,yml,yaml}\"",
    "lint": "eslint --fix \"**/*.{js,vue}\"",
    "lint:check": "eslint \"**/*.{js,vue}\"",
    "contract-test": "spectral lint openapi.yaml --format json > contract-report.json",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@stoplight/spectral": "^6.5.0",
    "commitizen": "^4.3.0",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "vue-eslint-parser": "^10.2.0"
  },
  "lint-staged": {
    "*.{js,vue,css,md,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,vue}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
