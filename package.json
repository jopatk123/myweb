{
  "name": "myweb",
  "version": "1.0.0",
  "description": "MyWeb Project",
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm start",
    "format": "prettier --write \"**/*.{js,vue,css,md,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,vue,css,md,json,yml,yaml}\"",
    "lint": "eslint --fix \"**/*.{js,vue}\"",
    "lint:check": "eslint \"**/*.{js,vue}\"",
    "contract-test": "spectral lint openapi.yaml --format json > contract-report.json"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/eslint-parser": "^7.28.0",
    "@stoplight/spectral": "^6.5.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "commitizen": "^4.3.0",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "vue-eslint-parser": "^9.4.3"
  },
  "lint-staged": {
    "*.{js,vue,css,md,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
