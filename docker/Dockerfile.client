# Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY client/package*.json ./
RUN npm ci --only=production

# Copy source code
COPY client/ .

# Build the app
RUN npm run build

# Serve with nginx
FROM nginx:alpine
COPY --from=0 /app/dist /usr/share/nginx/html
COPY docker/nginx.conf.template /etc/nginx/conf.d/default.conf

EXPOSE 80